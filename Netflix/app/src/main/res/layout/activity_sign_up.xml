<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".SignUpActivity">
    <ImageView
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:src="@drawable/px640_netflix_2015_logo"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:id="@+id/netflixImage"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="4dp"
        android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            app:hintTextColor="#999"
            app:startIconDrawable="@drawable/ic_baseline_person_24"
            app:startIconTint="@color/white"
            app:endIconTint="@color/white"
            app:counterEnabled="true"
            app:counterMaxLength="20"
            app:endIconDrawable="@drawable/ic_baseline_clear_24"
            app:endIconMode="clear_text"
            android:textColorHint="#999"
            app:helperText="Required"

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:hint="user name"
                android:textColor="@color/white"
                android:id="@+id/nameField"
                android:inputType="textPersonName"
                android:maxLength="20"
                android:layout_height="match_parent"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginVertical="5dp"
            app:startIconDrawable="@drawable/ic_baseline_email_24"
            app:startIconTint="@color/white"
            android:textColorHint="#999"
            app:errorEnabled="true"
            app:errorIconDrawable="@color/design_default_color_error"
            app:errorIconTint="@color/red"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/sign_email_field"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Email"
                android:textColor="@color/white"
                android:inputType="textEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginVertical="5dp"
            app:startIconDrawable="@drawable/ic_baseline_local_phone_24"
            app:startIconTint="@color/white"
            android:textColorHint="#999"
            app:prefixText="+201"
            app:prefixTextColor="@color/white"
            app:counterMaxLength="9"
            app:counterEnabled="true"
            app:helperText="Required"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/phone_number"
                android:maxLength="9"
                android:hint="Phone "
                android:textColor="@color/white"
                android:inputType="number"
                android:layout_height="match_parent"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginVertical="5dp"
            app:startIconDrawable="@drawable/ic_baseline_lock_24"
            app:startIconTint="@color/white"
            android:textColorHint="#999"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/white"
            app:counterEnabled="true"
            app:counterMaxLength="10"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/sign_password_field"
                android:hint="Password"
                android:maxLength="10"
                android:textColor="@color/white"
                android:inputType="textPassword"
                android:layout_height="match_parent"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            app:startIconDrawable="@drawable/ic_baseline_lock_24"
            app:startIconTint="@color/white"
            android:textColorHint="#999"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/sign_confitm_password_field"
                android:hint="Confitm Password"
                android:textColor="@color/white"
                android:inputType="textPassword"
                android:layout_height="match_parent"/>
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:text="Already have an account?  "
                android:textStyle="bold"

                android:textColor="#999"
                android:textSize="13sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="Login"
                android:textStyle="bold"
                android:id="@+id/loginView"
                android:textColor="@color/red"
                android:textSize="13sp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/signUpBTN"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="SIGN UP"
        android:padding="10dp"
        android:background="@drawable/white_back"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>