<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".HomeActivity">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/father_of_buttons"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="270sp"
                    android:id="@+id/header_image"
                    android:src="@drawable/netflix_logo_image"
                    android:scaleType="centerCrop"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    android:id="@+id/shakl"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/layout_back"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="header title here"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_below="@id/shakl"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/header_title"/>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/like_button"
                    android:layout_toLeftOf="@id/playBtn"
                    android:layout_marginRight="10dp"
                    android:layout_below="@id/header_title"
                    >
                    <ImageView
                        android:layout_width="20sp"
                        android:id="@+id/like_image"
                        android:layout_height="20sp"
                        android:src="@drawable/ic_baseline_favorite_border_24"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Like"
                        android:id="@+id/like_text"
                        android:textColor="#9a9a9a"
                        android:textSize="10sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/playBtn"
                    android:layout_marginHorizontal="50dp"
                    android:layout_below="@id/header_title"
                    android:layout_centerHorizontal="true"

                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="3dp"
                        android:background="@drawable/play_btn_back"
                        >
                        <ImageView
                            android:layout_width="23sp"
                            android:layout_height="23sp"
                            android:layout_marginRight="3dp"
                            android:src="@drawable/ic_baseline_play_arrow_24"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Play"

                            android:paddingRight="3dp"
                            android:layout_marginLeft="5dp"
                            android:textSize="15sp"
                            android:paddingVertical="3dp"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/header_title"
                    android:id="@+id/infoBtn"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/playBtn"
                    >
                    <ImageView
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:src="@drawable/ic_baseline_info_24"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Info"
                        android:textColor="#9a9a9a"
                        android:textSize="10sp"/>
                </LinearLayout>
            </RelativeLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/father_of_buttons"
                android:paddingBottom="20dp"
                android:layout_marginBottom="35dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="4dp"
                    android:layout_marginTop="13dp"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Popular"
                        android:textSize="20sp"
                        android:textColor="@color/white"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/first_rec"
                            />
                        <ProgressBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="75dp"
                            android:id="@+id/f_progressBar"
                            android:visibility="gone"
                            />
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Soon"
                        android:textSize="20sp"
                        android:textColor="@color/white"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/second_rec"
                        android:layout_weight="1"
                        />
                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/s_progress_bar"
                        android:paddingTop="75dp"
                        android:visibility="gone"
                        />
                </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:id="@+id/bar"

        app:menu="@menu/bottom_navbar"
        app:itemIconTint="#9a9a9a"
        app:itemTextColor="#9a9a9a"
        android:layout_alignParentBottom="true" />

</RelativeLayout>